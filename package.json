  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20.12.0"
  }
}
